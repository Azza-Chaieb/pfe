{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Additional services available for rent with coworking spaces"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "price_type": {
      "type": "enumeration",
      "enum": ["hourly", "daily", "one-time"],
      "default": "one-time"
    },
    "quantity": {
      "type": "integer",
      "default": 1
    },
    "spaces": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::space.space",
      "mappedBy": "services"
    }
  }
}
